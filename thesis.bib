@article{NSGA2,
  title = {A Fast and Elitist Multiobjective Genetic Algorithm: {{NSGA-II}}},
  shorttitle = {A Fast and Elitist Multiobjective Genetic Algorithm},
  author = {Deb, K. and Pratap, A. and Agarwal, S. and Meyarivan, T.},
